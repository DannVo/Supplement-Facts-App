@model WebMVCTesting.Models.TestingUser
@{
    ViewBag.Title = "Login";
}

<div style="display: grid; grid-template-columns: 50% 50%; ">
    <div class="sidenav">
        <div class="login-main-text">
            <h2><strong style="color:#ff6a00;">HealthCare+</strong><br> Welcome to my website</h2>
            <p>Login or register from here to access.</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                @using (Html.BeginForm("Verify", "Home", FormMethod.Post))
                 {
                    @Html.AntiForgeryToken()
                 <div class="form-group">
                    
                    @Html.LabelFor(m => m.email,"Email", @Html.Raw("<i class=\"fa-solid fa-envelope\"></i>"))                 
                    @Html.TextBoxFor(m => m.email, "", new { @class = "form-control", @placeholder = "Email" })
               
                 </div>
                 <div class="form-group">
                    @Html.LabelFor(m => m.password,"Password", @Html.Raw("<i class=\"fa-solid fa-lock\"></i>"))
                    @Html.PasswordFor(m => m.password, new {@class="form-control", @placeholder="Password"})
                    
                 </div>
                    <button type="submit" class="btn btn-black">Login</button>
                 }
                    @*<button type="submit" class="btn btn-secondary">Register</button>*@
                
            </div>
        </div>
    </div>

</div>
